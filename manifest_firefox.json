{
  "manifest_version": 2,
  "name": "Clipboard Mailer",
  "description": "Copy email links to your clipboard instead of opening the mail app.",
  "version": "1.0",
  "icons": {
    "48": "icon.png"
  },
  "permissions": ["activeTab", "clipboardWrite", "storage", "<all_urls>"],
  "browser_action": {
    "default_popup": "clipboard.html",
    "default_icon": {
      "48": "icon.png"
    }
  },
  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["loadCopyModule.js", "copy.js"],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "clipboard.mailer@stackstudio.dev",
      "strict_min_version": "42.0"
    }
  }
}
