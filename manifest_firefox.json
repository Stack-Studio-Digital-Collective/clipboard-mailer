{
  "manifest_version": 2,
  "name": "Mail Clipper",
  "description": "Copy email links to your clipboard instead of opening the mail app.",
  "version": "1.0.2",
  "icons": {
    "48": "icon_128.png"
  },
  "permissions": ["clipboardWrite", "storage", "<all_urls>"],
  "browser_action": {
    "default_popup": "clipboard.html",
    "default_icon": {
      "48": "icon_128.png"
    }
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["copy.js"],
      "run_at": "document_end",
      "all_frames": true
    }
  ],
  "browser_specific_settings": {
    "gecko": {
      "id": "clipboard.mailer@stackstudio.dev",
      "strict_min_version": "42.0"
    }
  }
}
