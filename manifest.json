{
  "manifest_version": 3,
  "name": "Clipboard Mailer",
  "description": "Copy email links to your clipboard instead of opening the mail app.",
  "version": "1.0",
  "action": {
    "default_popup": "clipboard.html",
    "default_icon": "icon.png"
  },
  "permissions": ["activeTab", "clipboardWrite", "storage"],
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["copy.js"],
      "run_at": "document_end"
    }
  ]
}
